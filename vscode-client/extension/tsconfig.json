{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": [
      "ES7",
      "DOM",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
    ],
    "outDir": "../../out/extension",
    "rootDir": ".",
    "jsx": "react",
		"jsxFactory": "vscpp",
		"jsxFragmentFactory": "vscppf"
  },
  "exclude": [
    "../../node_modules",
    ".vscode-test",
  ]
}